+    struct wayland_wakeup *wakeup;
+
+    wayland_mutex_lock(&process_wayland_mutex);
+
+    wl_list_for_each(wakeup, &wayland_wakeup_list, link)
+    {
+        uint64_t wakeup_time = wakeup->target_time_ms;
+        if (min == 0 || wakeup_time < min)
