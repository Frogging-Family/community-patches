+    props = calloc(count_props, sizeof(*props));
+    if (!props)
+    {
+        ERR("Failed to allocate memory\n");
+        res = FALSE;
+        goto out;
+    }
+    vk_res = pvkEnumerateInstanceExtensionProperties(NULL, &count_props, props);
+    if (vk_res != VK_SUCCESS)
