+    DWORD wbytes;
+
+    /* Windows doesn't emit a character for Delete. */
+    if (nsyms == 1 && syms[0] == XKB_KEY_Delete) return 0;
+
+    utf8_len = _xkb_keysyms_to_utf8(syms, nsyms, utf8, sizeof(utf8));
