+{
+    VkExtensionProperties *props = NULL;
+    uint32_t count_props;
+    VkResult vk_res;
+    BOOL res = TRUE;
+
+    vk_res = pvkEnumerateInstanceExtensionProperties(NULL, &count_props, NULL);
+    if (vk_res != VK_SUCCESS)
