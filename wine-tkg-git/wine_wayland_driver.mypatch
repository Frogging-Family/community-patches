+
+    send_message(cursor_hwnd, WM_WAYLAND_POINTER_CONSTRAINT_UPDATE,
+                 WAYLAND_POINTER_CONSTRAINT_SET_CURSOR_POS, 0);
+
+    return TRUE;
+}
