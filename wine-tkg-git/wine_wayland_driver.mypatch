+    }
+
+#ifdef SONAME_LIBGL
+    if (!(opengl_handle = dlopen(SONAME_LIBGL, RTLD_NOW|RTLD_GLOBAL)))
+        WARN("failed to load %s: %s\n", SONAME_LIBGL, dlerror());
